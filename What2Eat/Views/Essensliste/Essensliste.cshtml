@model IEnumerable<What2Eat.Models.EssenslisteModel>
@*@model What2Eat.Models.EssenslisteModel*@

@{
    ViewBag.Title = "Essensliste";
}

<h1>Essensliste</h1>
@using (Html.BeginForm("Essensliste", "Essensliste", FormMethod.Post))
{
    @*@Html.TextBoxFor(model => model. , new { @class = "input-medium search-query", @placeholder = "Suchen" })*@
    @Html.TextBoxFor(model => model.Suchwert)
    <input type="submit" id="btnSubmitSearchString" value="Submit" />
}

<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Id)</th>
        <th>@Html.DisplayNameFor(model => model.Name)</th>
        <th>@Html.DisplayNameFor(model => model.Janic)</th>
        <th>@Html.DisplayNameFor(model => model.Oma)</th>
        <th>@Html.DisplayNameFor(model => model.Opa)</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Id)</td>
            <td>@Html.DisplayFor(modelItem => item.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.Janic)</td>
            <td>@Html.DisplayFor(modelItem => item.Oma)</td>
            <td>@Html.DisplayFor(modelItem => item.Opa)</td>
        </tr>
    }

</table>