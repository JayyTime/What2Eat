@model IEnumerable<What2Eat.Models.EssenslisteModel>
@*@model What2Eat.Models.EssenslisteModel*@

@{
    ViewBag.Title = "Essensliste";
}

@*Header für jede View*@
<div class="text-center">
    <h1 class="display-4"><i class="fas fa-utensils"></i> Essensliste <i class="fas fa-utensils"></i></h1>
    <br />
    <br />
</div>
@*Header Ende*@

<br />
<br />
<form action="" class="">
    <div class="input-group mb-3">
        <input type="text" class="form-control" placeholder="Essen" />
        <button type="submit" class="input-group-text btn-dark"> <i class="bi bi-search me-2"></i> Suchen</button>
    </div>
</form>

<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Id)</th>
        <th>@Html.DisplayNameFor(model => model.Name)</th>
        <th>@Html.DisplayNameFor(model => model.Janic)</th>
        <th>@Html.DisplayNameFor(model => model.Oma)</th>
        <th>@Html.DisplayNameFor(model => model.Opa)</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Id)</td>
            <td>@Html.DisplayFor(modelItem => item.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.Janic)</td>
            <td>@Html.DisplayFor(modelItem => item.Oma)</td>
            <td>@Html.DisplayFor(modelItem => item.Opa)</td>
        </tr>
    }

</table>